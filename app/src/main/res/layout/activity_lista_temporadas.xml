<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:elevation="6dp"
                android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.constraint.ConstraintLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".ListaTemporadasActivity">

                <ImageView
                        android:background="@mipmap/icone_filme_white"
                        android:layout_width="107dp"
                        android:layout_height="115dp"
                        android:id="@+id/imageView3" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"/>

                <TextView
                        android:id="@+id/text_titulo_serie_filme"
                        android:text="Título"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="17dp"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView3"
                        android:layout_marginStart="8dp"/>

                <TextView
                        android:id="@+id/text_genero_serie_filme"
                        android:textColor="#FFFFFF"
                        android:textStyle="italic"
                        android:textSize="17sp"
                        android:text="Gênero"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/text_titulo_serie_filme"
                        app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"/>

                <TextView
                        android:id="@+id/text_ano_serie_filme"
                        android:textColor="#FFFFFF"
                        android:textStyle="italic"
                        android:textSize="17sp"
                        android:text="Ano"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_genero_serie_filme"
                        app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"/>

                <TextView
                        android:layout_width="314dp"
                        android:textStyle="italic"
                        android:id="@+id/text_sinopse_serie_filme"
                        android:text="Sinopse"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:layout_height="77dp"
                        android:padding="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView3"
                        app:layout_constraintEnd_toStartOf="@+id/fab_nova_temporada" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>


                <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:id="@+id/fab_nova_temporada"
                        android:src="@drawable/ic_action_series"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.975"
                        app:layout_constraintVertical_bias="1.0"/>

            </android.support.constraint.ConstraintLayout>


        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_temporadas"
                android:layout_width="367dp"
                android:layout_height="280dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/app_bar"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">

        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>

</ScrollView>


