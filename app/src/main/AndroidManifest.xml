<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.artur.watch">

    <application
            android:name=".dal.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".SplashActivity"
                android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".TimeLineActivity"
                android:label="Feed Principal"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity
                android:name=".CadastroActivity"
                android:label="Cadastre-se"
                android:parentActivityName=".LoginActivity">
        </activity>
        <activity
                android:name=".FormularioItemActivity"
                android:label="Novo Filme/Série"
                android:parentActivityName=".TimeLineActivity">
        </activity>
        <activity
                android:name=".FormularioPostActivity"
                android:label="Novo Post Público"
                android:parentActivityName=".TimeLineActivity">
        </activity>
        <activity
                android:name=".ListaTemporadasActivity"
                android:label="Temporadas"
                android:parentActivityName=".ListaTemporadasActivity">
        </activity>
        <activity
                android:name=".FormularioTemporadaActivity"
                android:label="Nova Temporada"
                android:parentActivityName=".ListaTemporadasActivity">
        </activity>
    </application>

</manifest>